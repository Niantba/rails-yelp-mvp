<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category.capitalize() %></p>

<p><%= link_to "Back to all restaurants", restaurants_path %></p>

<ul>
  <% @restaurant.reviews.each do |review| %>
      <li><%= "#{review.rating} -- #{review.content}" %></li>
  <% end %>
</ul>

<%= link_to "Add a review", new_restaurant_review_path(params[:id]) %>
